<Page x:Class="WpfEx.Pages.Page_Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEx.Pages"
      mc:Ignorable="d" Background="AliceBlue"
      d:DesignHeight="400" d:DesignWidth="800"
      Title="Page_Auth">

	<Grid>
		<Label Content="Логин:" HorizontalAlignment="Left" Margin="181,160,0,0" VerticalAlignment="Top" Height="27" Width="70" FontSize="16"/>
		<Label Content="Пароль:" HorizontalAlignment="Left" Margin="181,195,0,0" VerticalAlignment="Top" Height="27" Width="70" FontSize="16"/>
		<TextBlock Name="txtHintLogin" Foreground="Gray" HorizontalAlignment="Left" Margin="256,160,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Height="30" Width="144" FontSize="16"/>
		<PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="256,195,0,0" VerticalAlignment="Top" Width="144" Height="32"/>
		<Button Content="Вход" Click="ButtonEnter_OnClick" HorizontalAlignment="Left" Margin="301,273,0,0" VerticalAlignment="Top" Height="37" Width="99" FontSize="18"/>
		<TextBox x:Name="TextBoxLogin" Background="Transparent" HorizontalAlignment="Left" Margin="256,158,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="144" Height="32" TextChanged="TextBoxLogin_Changed"/>
	</Grid>
</Page>
